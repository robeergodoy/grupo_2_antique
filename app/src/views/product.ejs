<section class="product-box col-12 col-md-6 col-lg-3">
    <a href="/products/<%=product.id%>">
        <figure class="product-box_image">
            <img src="<%=product.image.image_1%>" alt="imagen de producto">
        </figure>
        <article class="product-box_data">
            <h2>$<%=product.price%></h2>
            <p><%=product.title%></p>
        </article>
    </a>
</section>
